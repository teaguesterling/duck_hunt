# Test 14: Test explicit format override vs auto-detection
statement ok
CREATE TABLE explicit_format AS 
SELECT * FROM parse_duck_hunt_log('src/main.c:15:5: error: undeclared variable', 'generic_lint');

statement ok
CREATE TABLE auto_detected AS 
SELECT * FROM parse_duck_hunt_log('src/main.c:15:5: error: undeclared variable', 'auto');

# Verify both produce the same results
query I
SELECT COUNT(*) FROM (
  SELECT tool_name, ref_file, ref_line, status, message
  FROM explicit_format
  EXCEPT
  SELECT tool_name, ref_file, ref_line, status, message
  FROM auto_detected
);
----
0

